{
  "name": "project-hackathon-leer",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter '*' dev",
    "dev:client": "bun run --filter client dev",
    "dev:server": "bun run --filter server dev",
    "build": "bun run --filter '*' build",
    "build:client": "bun run --filter client build",
    "build:server": "bun run --filter server build",
    "start": "bun run --filter '*' start",
    "start:client": "bun run --filter client start",
    "start:server": "bun run --filter server start",
    "typecheck": "bun run --filter '*' typecheck",
    "lint": "bun run --filter '*' lint",
    "clean": "rm -rf apps/*/dist apps/*/.solid apps/*/.vinxi packages/*/dist node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "dependencies": {
    "socket.io": "^4.8.1"
  }
}
